{
  "name": "weather-app-app",
  "version": "1.0.0",
  "description": "AplicaciÃ³n del tiempo con CI/CD",
  "main": "weather.js",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "start": "node weather.js",
    "build": "pkg .",
    "lint": "eslint . --ext .js"
  },
  "bin": "weather.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "pkg": {
    "scripts": "*.js",
    "targets": [
      "node20-linux-x64",
      "node20-macos-x64",
      "node20-macos-arm64",
      "node20-win-x64"
    ],
    "outputPath": "dist"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "*.js",
      "!weather.js"
    ]
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.57.0",
    "@yao-pkg/pkg": "^5.12.0"
  }
}
